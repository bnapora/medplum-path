{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
      {
          "type": "msedge",
          "request": "launch",
          "name": "Launch Edge - App",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceFolder}/packages/app",
      },
      {
          "type": "chrome",
          "request": "launch",
          "name": "Launch Chrome - App",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceFolder}/packages/app",
      },
      {
        "name": "Launch Server via NPM",
        "request": "launch",
        "cwd": "${workspaceFolder}/packages/server",
        "runtimeArgs": [
          "run-script",
          "dev"
        ],
        "runtimeExecutable": "/usr/lib/node_modules/npm",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node"
      },
      {
        "name": "Launch Server: npm run dev",
        "cwd": "${workspaceFolder}/packages/server",
        "command": "npm run dev",
        "request": "launch",
        "type": "node-terminal"
    }

  ]
}